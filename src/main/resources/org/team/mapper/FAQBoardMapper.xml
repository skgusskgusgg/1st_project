<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.rog//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.team.mapper.FAQBoardMapper">
<!-- 목록 조회  -->
<select id="getList" resultType="org.team.faq.FAQBoardVO">
	select * from faq order by faqId desc
</select>

<!-- 새 글 쓰기 -->
<insert id="faqInsert">
	insert into faq(faqTitle, faqContents, img) 
	values (#{faqTitle}, #{faqContents}, #{img})
</insert>

<!-- 상세보기  -->
<select id="faqDetail" parameterType="int" resultType="org.team.faq.FAQBoardVO">
	select * from faq where faqId = #{faqId}
</select>

<!-- 수정  -->
<update id="faqEdit" parameterType="org.team.faq.FAQBoardVO">
	update faq set faqTitle = #{faqTitle}, faqContents = #{faqContents}, img = #{img}
	where faqId = #{faqId}
</update>

<!-- 삭제  -->
<delete id="faqDelete" parameterType="int">
	delete from faq where faqID = #{faqID}
</delete>

<!-- 게시물 총 개수 구하기 -->
<select id="faqCount" resultType="int">
	select count(faqId) from faq
</select>

<!-- 목록 + 페이징 -->
<select id="faqListPage" parameterType="hashMap" resultType="org.team.faq.FAQBoardVO">
	select * from faq order by faqId desc limit #{displayPost}, #{postNum}
</select>
</mapper>